<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.chenliuliu.progressbar.MainActivity">

    <ImageView
        android:id="@+id/btn_anim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/animation"/>

    <ImageView
        android:id="@+id/btn_anim2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/animation2"/>

    <ImageView
        android:id="@+id/btn_anim3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/animation"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_anim4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/refresh_loading"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="加载中。。。。。"/>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/login_progress"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:indeterminate="true"
        android:indeterminateDrawable="@drawable/demo_login_progress"
        android:visibility="visible"/>
</LinearLayout>
